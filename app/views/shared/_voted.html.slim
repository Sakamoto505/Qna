div id="#{resource.class.name.downcase}-rating-#{resource.id}"
  = resource.rating
- if policy(resource).user?
  .vote
    = link_to '+', polymorphic_path(resource, action: :like), method: :patch, remote: true, data: { type: :json }, class: 'upvote'
    = link_to '-', polymorphic_path(resource, action: :dislike), method: :patch, remote: true, data: { type: :json }, class: 'downvote'
    = link_to 'Cancel vote', polymorphic_path(resource, action: :cancel), method: :delete, remote: true, data: { type: :json }, class: 'cancel-vote'
